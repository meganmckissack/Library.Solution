@{
  Layout = "_Layout";
}

@using Library.Models;
@using System;
@model List<Library.Models.Book>;

<h1>Books</h1>

@if (@Model.Count == 0)
{
  <h3>No Books have been added yet!</h3>
} 

<table class="table">
  <thead>
    <tr>
      <th>
        Book Title
      </th>
      <th>
        Author
      </th>
      <th>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  @foreach(Book book in Model)
  {
    <tr>
        <td>
          @Html.DisplayFor(modelBook => book.BookTitle)
        </td>
        <td>
          @* @foreach(var join in Book.JoinArtistBook)
          {
            @join.Artist.ArtistName
          } *@
        </td>
        <td>
          @* @if (Book.JoinBookGallery.Count == 0)
          {
            <p>Not on display</p>
          } *@
          @* @foreach(var join in Book.JoinBookGallery)
          {
            @join.Gallery.GalleryName
          } *@
        </td>
        <td>
          @Html.ActionLink("Details", "Details", new { id = Book.BookId }) |
          @Html.ActionLink("Edit", "Edit", new { id = Book.BookId }) | 
          @Html.ActionLink("Delete", "Delete", new { id = Book.BookId })
        </td>
      </tr>
    }
  </tbody>
</table>

<hr />
<p>@Html.ActionLink("Add new Book", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>