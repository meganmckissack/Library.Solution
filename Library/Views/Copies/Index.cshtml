@{
  Layout = "_Layout";
}

@using Library.Models;
@using System;
@model List<Library.Models.Copy>;

<h1>Available Copies</h1>

@if (@Model.Count == 0)
{
  <h3>No Copies have been added yet!</h3>
} 

<table class="table">
  <thead>
    <tr>
      <th>
        Copy Id
      </th>
      <th>
        Author
      </th>
      <th>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  @foreach(Copy copy in Model)
  {
    <tr>
        <td>
          @Html.DisplayFor(modelCopy => copy.CopyId)
        </td>
        <td>
          @* @foreach(var join in Copy.JoinArtistCopy)
          {
            @join.Artist.ArtistName
          } *@
        </td>
        <td>
          @* @if (Copy.JoinCopyGallery.Count == 0)
          {
            <p>Not on display</p>
          } *@
          @* @foreach(var join in Copy.JoinCopyGallery)
          {
            @join.Gallery.GalleryName
          } *@
        </td>
        <td>
          @Html.ActionLink("Details", "Details", new { id = Copy.CopyId }) |
          @Html.ActionLink("Edit", "Edit", new { id = Copy.CopyId }) | 
          @Html.ActionLink("Delete", "Delete", new { id = Copy.CopyId })
        </td>
      </tr>
    }
  </tbody>
</table>

<hr />
<p>@Html.ActionLink("Add new Copy", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>