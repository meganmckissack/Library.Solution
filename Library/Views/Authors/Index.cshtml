@{
  Layout = "_Layout";
} 

@using Museum.Models;
@model List<Museum.Models.Author>;

<h1>Authors</h1>

@if (@Model.Count == 0)
{
  <h3>No Authors have been added yet!</h3>
} 

<ul>
  @foreach(Author Author in Model)
  {
    <li>@Html.ActionLink($"{Author.AuthorName}", "Details", new { id = Author.AuthorId })</li>
  }
</ul>
<hr />
<p>@Html.ActionLink("Add new Author", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>